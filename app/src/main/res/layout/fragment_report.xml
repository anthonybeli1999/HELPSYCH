<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ReportFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reportes"
                android:textSize="20sp"
                android:fontFamily="@font/robotomedium"
                android:paddingVertical="15dp"
                android:textColor="@color/white"
                android:background="@color/dark_blue"
                android:paddingHorizontal="20dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_all_chats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="40sp"
                        android:fontFamily="@font/robotomedium"
                        android:textColor="@color/dark_blue"
                        android:gravity="center"
                        android:layout_weight="1"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONVERSACIONES ACTIVAS"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/txt_ranking_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/shadow_red"
                    android:textSize="40sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VALORACIONES REALIZADAS"
                    android:textSize="16sp"
                    android:textColor="@color/shadow_red"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/txt_test_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/dark_blue"
                    android:textSize="40sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TESTS REALIZADOS"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue2"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/txt_user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/shadow_red"
                    android:textSize="35sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIPO DE USUARIO"
                    android:textSize="16sp"
                    android:textColor="@color/shadow_red"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_date_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="07/05/21"
                    android:textSize="40sp"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/dark_blue"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FECHA DE REGISTRO"
                    android:textSize="16sp"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center"
                    android:textColor="@color/dark_blue"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/report_box_chats"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/parent_relative_layout">

                    <ImageView
                        android:id="@+id/my_mood"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"

                        android:contentDescription="@string/mood_of_the_user"
                        android:paddingTop="50dp"
                        android:src="@drawable/smiley_happy" />


                    <ImageButton
                        android:id="@+id/btn_add_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        android:background="@null"
                        android:contentDescription="@string/add_comment_button"
                        android:src="@drawable/ic_note_add_black" />

                    <ImageButton
                        android:id="@+id/btn_mood_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        android:background="@null"
                        android:contentDescription="@string/mood_history_button"
                        android:src="@drawable/ic_history_black" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>