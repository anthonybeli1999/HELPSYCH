<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ApproachAdminFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enfoque psicológico"
                android:textSize="20sp"
                android:fontFamily="@font/robotomedium"
                android:paddingVertical="15dp"
                android:textColor="@color/white"
                android:background="@color/dark_blue"
                android:paddingHorizontal="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En este apartado podrás agregar y ver los enfoques psicológicos disponibles"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotolight"
                android:gravity="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/img_approach">
            </ImageView>

            <EditText
                android:id="@+id/txtPsyApproach"
                android:hint="Ingresa el enfoque psicológico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotolight"
                android:inputType="text"
                android:layout_marginHorizontal="0dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnAdd_PsyApproach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/dark_blue"
                android:fontFamily="@font/robotomedium"
                android:text="AGREGAR ENFOQUE PSICOLÓGICO"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:elevation="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lista de enfoque psicológicos"
                    android:textSize="18sp"
                    android:paddingVertical="5dp"
                    android:textColor="@color/shadow_red"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/psy_approach_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>





</RelativeLayout>