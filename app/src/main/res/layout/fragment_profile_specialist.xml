<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileSpecialistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/user_textbutton_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:fontFamily="sans-serif"
                android:textColor="@color/shadow_red"
                android:textStyle="bold"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img_userphoto_s"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#7E7E7E"
                    android:layout_marginVertical="10dp"/>

                <TextView
                    android:id="@+id/txtTipoProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Especialista"
                    android:textSize="14sp"
                    android:textColor="#7E7E7E"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombres:"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_name_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jhon"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apellidos:"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_lastname_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Doe"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-mail:"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_email_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="jhondoe@gmail.com"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fecha de nacimiento:"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_date_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22-08-1992"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sexo"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_sex_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Masculino"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Celular"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_number_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="917903832"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descripcion"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_description_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ciudad"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_city_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tacna"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="País"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_country_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Perú"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Linkedin"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_linkedin_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="https://pe.linkedin.com/"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnChangePassword_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="sans-serif"
            android:text="CAMBIAR DE CONTRASEÑA"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btnLogout_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/shadow_red"
            android:fontFamily="sans-serif"
            android:text="CERRAR SESIÓN"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>