<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileSpecialistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/user_textbutton_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/shadow_red"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/txtTipoProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Paciente"
                android:textSize="15sp"
                android:textColor="#7E7E7E"
                android:visibility="gone"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_userphoto_s"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/profile_image"
                android:layout_marginVertical="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombres"
                    android:textSize="15sp"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/robotobold"
                    android:autofillHints="true"
                    android:gravity="center"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/txt_name_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jhon"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotolight"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:textSize="15sp"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/txt_lastname_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doe"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotolight"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textSize="15sp"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/txt_email_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jhondoe@gmail.com"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotolight"
                    android:gravity="center"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento"
                    android:textSize="15sp"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/txt_date_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22-08-1992"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotolight"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sexo"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/txt_sex_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masculino"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotolight"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Número"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/txt_number_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="966857485"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotolight"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textSize="15sp"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/txt_description_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem"
                    android:inputType="textMultiLine"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotolight"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ciudad"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/txt_city_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tacna"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotolight"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="País"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/robotobold"
                        android:gravity="center"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/txt_country_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perú"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotolight"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RED SOCIAL"
                    android:textSize="15sp"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/txt_social_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://www.linkedin.com"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotolight"
                    android:layout_marginStart="5dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp">

            <Button
                android:id="@+id/btnChangePassword_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_blue"
                android:fontFamily="@font/robotomedium"
                android:text="CAMBIAR DE CONTRASEÑA"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnLogout_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/shadow_red"
                android:fontFamily="@font/robotomedium"
                android:text="CERRAR SESIÓN"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>