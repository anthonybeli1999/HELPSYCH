<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ArticleDetails">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_article_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ejemplonoticia" />

            <TextView
                android:id="@+id/txt_detail_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="¿Qué ejercicio debes hacer para acabar con el estrés y la ansiedad?"
                android:textColor="@color/shadow_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_detail_article_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La práctica deportiva puede ayudarte a combatirlos"
                android:textColor="#707070"
                android:textSize="17sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_detail_article_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin faucibus mattis interdum. Nunc sagittis elementum turpis, hendrerit elementum sem hendrerit id. Aliquam et eros facilisis, tristique elit ullamcorper, posuere leo. Nunc et elit blandit, dictum tellus at, mollis sapien. Sed vehicula massa ac scelerisque pellentesque. Etiam a mauris ac sem feugiat tincidunt id rutrum ipsum. Sed luctus euismod orci, vitae finibus lorem cursus sed. Etiam mattis ultricies diam, id finibus eros egestas egestas. Donec euismod semper erat, in lobortis leo malesuada in. Maecenas auctor auctor blandit."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1.37"
                    android:text="Autor:"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_detail_article_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:text="Jhon Doe"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Fecha de publicación:"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_detail_article_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1.25"
                    android:text="15/05/21"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>