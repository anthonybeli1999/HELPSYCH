<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainSpecialistActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar">
    </include>

    <FrameLayout
        android:id="@+id/frame_container_specialist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@id/bottom_navigation_specialist"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_specialist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:background="@drawable/background_bar"
        app:menu="@menu/bottom_navigation_specialist"
        app:labelVisibilityMode="selected"
        style="@style/BottomNavigation"/>

</RelativeLayout>