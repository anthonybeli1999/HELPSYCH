<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TestsAdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tests"
                android:textSize="20sp"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:background="@color/dark_blue"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En este apartado podra agregar preguntas de acuerdo al test seleccionado"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotolight"
                android:gravity="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/prueba">
            </ImageView>

            <Spinner
                android:id="@+id/spinnerApproaches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotolight"
                android:layout_marginHorizontal="0dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtQuestionTest"
                android:hint="Ingresa aqui la pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotolight"
                android:inputType="text"
                android:layout_marginHorizontal="0dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnAddQuestion_Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/dark_blue"
                android:fontFamily="sans-serif"
                android:text="AGREGAR PREGUNTA AL TEST"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:elevation="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lista de preguntas del enfoque"
                    android:textSize="18sp"
                    android:paddingVertical="5dp"
                    android:textColor="@color/shadow_red"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/question_test_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>