<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/user_textbutton_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:fontFamily="sans-serif"
                android:textColor="@color/shadow_red"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="#E5E5E5"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_text_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Paciente"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/user_text_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="John Doe"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/shadow_red"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="12dp"
            android:text="INICIAR SESIÃ“N"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convertirse en"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OYENTE"
                android:textSize="15sp"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>