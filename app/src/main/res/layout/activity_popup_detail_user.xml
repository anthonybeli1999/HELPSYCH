<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PopupDetailUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/shadow_red"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/visit_profile_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/profile_image"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombres"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_pop_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Juan Antonio"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apellidos"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_pop_user_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salas Mogrovejo"
                            android:textSize="14sp"
                            android:textColor="@color/sky"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripcion"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_pop_user_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                        android:textSize="14sp"
                        android:textColor="@color/sky"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ciudad"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_pop_user_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tacna"
                        android:textSize="14sp"
                        android:textColor="@color/sky"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="País"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_pop_user_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perú"
                        android:textSize="14sp"
                        android:textColor="@color/sky"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Linkedin"
                        android:textSize="15sp"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_pop_user_linkedin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://pe.linkedin.com/"
                        android:textSize="14sp"
                        android:textColor="@color/sky"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/send_message_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Enviar solicitud"
            android:backgroundTint="@color/dark_blue"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/decline_message_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Cancelar solicitud"
            android:backgroundTint="@color/shadow_red"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

</RelativeLayout>