<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PopupTestActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/test_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TEST ANSIEDAD"
                android:textColor="@color/dark_blue2"
                android:fontFamily="@font/robotoblack"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/test_question_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pregunta 1:"
                android:textColor="@color/dark_blue2"
                android:fontFamily="@font/robotomedium"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/test_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Me siento mÃ¡s intranquilo(a) y nervioso(a) que de costumbre."
                android:textColor="@color/black"
                android:fontFamily="@font/robotolight"
                android:textSize="18sp"/>
        </LinearLayout>


        <RadioGroup
            android:id="@+id/test_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp">

            <RadioButton
                android:id="@+id/test_answer_never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nunca o casi nunca"
                android:fontFamily="@font/robotolight"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/test_answer_sometimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A veces"
                android:fontFamily="@font/robotolight"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/test_answer_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Con bastante frecuencia"
                android:fontFamily="@font/robotolight"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/test_answer_ever"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siempre o casi siempre"
                android:fontFamily="@font/robotolight"
                android:textSize="16sp"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/test_btn_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCELAR"
                    android:backgroundTint="@color/shadow_red"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/kalambold"
                    android:textSize="18sp"
                    android:layout_gravity="start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/test_btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGUIENTE"
                    android:backgroundTint="@color/sky"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/kalambold"
                    android:textSize="18sp"
                    android:layout_gravity="end"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>